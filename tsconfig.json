{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./public/scripts/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "downlevelIteration": true,
        "jsx": "react",
        "allowJs": true,
        "incremental": true,

        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    },
    "include": [
        "./assets/ts/**/*"
    ]
}